{
    "compilerOptions": {
        "module": "ESNext",
        "target": "es6",
        "outDir": "out",
        "moduleResolution": "node",
        "lib": [
            "es6"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        // other options
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "docs"
    ]
}
